{
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true,
        "chai": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "globals": {
        "constants": "readonly",
        "config": "readonly"
    },
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "complexity": [
            "error",
            100
        ],
        "consistent-return": "off",
        "func-names": "off",
        "import/extensions": "off",
        "no-await-in-loop": "warn",
        "no-console": "off",
        "no-eval": "error",
        "no-implied-eval": "error",
        "no-param-reassign": "off",
        "no-plusplus": "off",
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_",
                "caughtErrorsIgnorePattern": "^_"
            }
        ],
        "one-var": "off",
        "prefer-const": "warn",
        "prefer-promise-reject-errors": "warn",
        "prettier/prettier": [
            "error"
        ]
    }
}